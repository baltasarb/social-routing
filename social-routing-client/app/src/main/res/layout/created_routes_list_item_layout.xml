<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent">

    <TextView
            android:layout_width="317dp"
            android:layout_height="39dp"
            android:id="@+id/routeTitleTextView" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"/>
    <RatingBar
            android:layout_width="248dp"
            android:layout_height="48dp"
            android:id="@+id/routeRatingBar" android:numStars="5" android:rating="0"
            app:layout_constraintTop_toBottomOf="@+id/routeTitleTextView" app:layout_constraintEnd_toEndOf="parent"
            android:isIndicator="true"/>
</androidx.constraintlayout.widget.ConstraintLayout>