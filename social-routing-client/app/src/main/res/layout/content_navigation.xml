<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                                   android:layout_height="match_parent">


    <TextView
            android:text="@string/routes_search"
            android:id="@+id/search_textView"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textColor="@color/common_google_signin_btn_text_dark_focused"
            android:layout_width="230dp"
            android:layout_height="46dp"
            android:layout_marginStart="96dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="276dp" app:layout_constraintTop_toTopOf="parent"/>
    <EditText
            android:layout_width="327dp"
            android:layout_height="51dp"
            android:inputType="textPostalAddress"
            android:ems="10"
            android:hint="@string/location"
            android:id="@+id/location_editText"
            android:layout_marginTop="40dp"
            app:layout_constraintTop_toBottomOf="@+id/search_textView" android:layout_marginStart="16dp"
            app:layout_constraintStart_toStartOf="parent"/>

    <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@android:drawable/ic_menu_search"
            android:id="@+id/search_imageButton"
            app:layout_constraintStart_toEndOf="@+id/location_editText"
            android:layout_marginTop="40dp" app:layout_constraintTop_toBottomOf="@+id/search_textView"
            android:onClick="searchRoutesOnClick"/>

</androidx.constraintlayout.widget.ConstraintLayout>