<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:showIn="@layout/app_bar_navigation"
        tools:context=".activities.NavigationActivity">

    <TextView
            android:text="@string/routes_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/search_textView"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            android:textColor="@color/common_google_signin_btn_text_dark_focused" android:textAlignment="center"
            android:textStyle="bold" android:layout_marginStart="92dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="240dp" app:layout_constraintTop_toTopOf="parent"/>

    <EditText
            android:layout_width="342dp"
            android:layout_height="55dp"
            android:inputType="textPostalAddress"
            android:ems="10"
            android:id="@+id/routes_search_editText" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/search_textView"
            android:layout_marginStart="32dp" app:layout_constraintStart_toStartOf="parent"
            android:hint="@string/location"/>
</androidx.constraintlayout.widget.ConstraintLayout>