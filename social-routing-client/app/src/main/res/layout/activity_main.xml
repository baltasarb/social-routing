<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <Button
            android:text="Search Route"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/searchButton" android:layout_marginTop="80dp"
            app:layout_constraintTop_toBottomOf="@+id/textView" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.498"
            style="@android:style/Widget.Holo.Light.Button"/>
    <Button
            android:text="Create Route"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/createButton" android:layout_marginTop="60dp"
            app:layout_constraintTop_toBottomOf="@+id/searchButton" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.498"
            style="@android:style/Widget.Material.Button.Borderless.Colored"/>
    <Button
            android:text="My Routes"
            android:layout_width="116dp"
            android:layout_height="46dp"
            android:layout_marginTop="60dp"
            app:layout_constraintTop_toBottomOf="@+id/createButton"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:id="@+id/listButton"
            style="@style/Widget.AppCompat.Button" app:layout_constraintHorizontal_bias="0.498"/>
    <TextView
            android:text="Social Routing"
            android:layout_width="304dp"
            android:layout_height="51dp"
            android:id="@+id/textView" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.494"
            app:layout_constraintVertical_bias="0.159"
            android:textAppearance="@style/TextAppearance.AppCompat.Title" android:textAlignment="center"
            android:textSize="36sp"/>
</android.support.constraint.ConstraintLayout>